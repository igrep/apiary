  main-is:             api.hs
  build-depends:       base, apiary, warp, aeson, blaze-html, bytestring
  ghc-options:         -O2 -Wall
  default-language:    Haskell2010

executable pureScript
  main-is:             pureScript.hs
  build-depends:       base, apiary, warp, apiary-purescript, directory, filepath
  ghc-options:         -O2 -Wall
  default-language:    Haskell2010


