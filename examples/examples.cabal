executable persistent
  main-is:             persistent.hs
  build-depends:       base, apiary, warp, persistent-sqlite, persistent-template, apiary-persistent, apiary-logger, bytestring, monad-logger
  ghc-options:         -O2 -Wall
  default-language:    Haskell2010

executable auth
  main-is:             auth.hs
  build-depends:       base, apiary, warp, apiary-cookie, apiary-clientsession, bytestring, text, apiary-authenticate
